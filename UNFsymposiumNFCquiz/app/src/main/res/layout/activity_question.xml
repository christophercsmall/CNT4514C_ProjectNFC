        android:layout_weight="1"
        android:gravity="center"
        android:background="@drawable/shadowbox"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:id="@+id/qText"/>
    </TableRow>

